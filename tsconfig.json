{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "allowJs": false,
        "sourceMap": false,
        "rootDir": "./",
        "skipLibCheck": true,
        "lib": [
            "es6"
        ]
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
